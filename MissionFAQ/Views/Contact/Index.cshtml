@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    Contact <strong>Mission Accomplished</strong>
                </h2>
                <hr>
            </div>
            <div class="col-md-8">
                <!-- Embedded Google Map using an iframe  -->
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3045.8296497106626!2d-111.65903858470404!3d40.23508967938667!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x874d9752d6961af3%3A0x8cf52e27f8975ec6!2s100+N+100+E+St%2C+Provo%2C+UT+84606!5e0!3m2!1sen!2sus!4v1477941369154" width="700" height="500" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
            <div class="col-md-4">
                <p>
                    Phone: <strong>801.123.4567</strong>
                </p>
                <p>
                    Email: <strong>feedback@missionaccomplished.com</strong>
                </p>
                <p>
                    Address: <strong>100 N<br>100 E<br>Provo, UT 84606</strong>
                </p>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    Contact <strong>form</strong>
                </h2>
                <hr>
                <p>This contact form is just the form elements, it is not a working form.</p>
                <form role="form">
                    <div class="row">
                        <div class="form-group col-lg-4">
                            <label>Name</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group col-lg-4">
                            <label>Email Address</label>
                            <input type="email" class="form-control">
                        </div>
                        <div class="form-group col-lg-4">
                            <label>Phone Number</label>
                            <input type="tel" class="form-control">
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group col-lg-12">
                            <!--DropDownList using ViewBag-->
                            Subject: 
                            @Html.DropDownList("MyDropDownListWithController", (SelectList)ViewBag.DropDownValues)
                        </div>
                        <div class="form-group col-lg-12">
                            <label>Message</label>
                            <textarea rows="6" class="form-control"></textarea>
                        </div>
                        <div class="form-group col-lg-12">
                            <input type="hidden" value="contact" name="save">
                            <button class="btn btn-default" type="reset">Submit</button>
                                                            <!--type="reset" should be type="submit" once they want us to do that****************-->
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>